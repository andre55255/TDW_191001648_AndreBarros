{
    "openapi": "3.0.0",
    "info": {
        "title": "API de projeto de padaria disciplina TDW",
        "description": "API com objetivo de servir os dados para o projeto de padaria. Retorno utilizando o objeto APIResponseVO, que é um objeto padrão de resposta. Visualização disponível na seção de Schemas da documentação",
        "contact": {
            "email": "191-001648@aluno.unipac.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/",
            "description": "API localhost"
        }
    ],
    "paths": {
        "/Account/Login": {
            "post": {
                "summary": "Método para fazer login no sistema",
                "description": "Método para fazer login no sistema",
                "tags": ["Account"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginVO"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Erro de validação de entradas ou credenciais inválidas"
                    },
                    "500": {
                        "description": "Falha inesperada"
                    },
                    "200": {
                        "description": "Login efetuado com sucesso"
                    }
                }
            }
        },
        "/user": {
            "post": {
                "summary": "Método para criar usuário no sistema",
                "description": "Método para criar usuário no sistema",
                "tags": ["User"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SaveUserVO"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Erro de validação de entradas ou erro na criação de usuário"
                    },
                    "500": {
                        "description": "Falha inesperada"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "201": {
                        "description": "Usuário criado com sucesso"
                    }
                }
            },
            "get": {
                "summary": "Método para listar todos os usuários do sistema",
                "description": "Método para listar todos os usuários do sistema",
                "tags": ["User"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Erro de validação de entradas ou erro na criação de usuário"
                    },
                    "500": {
                        "description": "Falha inesperada"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "201": {
                        "description": "Usuário criado com sucesso"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginVO": {
                "type": "object",
                "properties": {
                    "login": {
                        "maxLength": 50,
                        "minLength": 3,
                        "type": "string",
                        "nullable": false
                    },
                    "password": {
                        "maxLength": 10,
                        "minLength": 3,
                        "type": "string",
                        "nullable": false,
                        "format": "password"
                    }
                }
            },
            "APIResponseVO": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "statusCode": {
                        "type": "number"
                    },
                    "message": {
                        "type": "string"
                    },
                    "object": {
                        "type": "object",
                        "nullable": false
                    }
                }
            },
            "SaveUserVO": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "nullable": false
                    },
                    "firstname": {
                        "type": "string",
                        "nullable": false,
                        "minLength": 3,
                        "maxLength": 50
                    },
                    "lastname": {
                        "type": "string",
                        "nullable": true,
                        "minLength": 3,
                        "maxLength": 50
                    },
                    "username": {
                        "maxLength": 50,
                        "minLength": 3,
                        "type": "string",
                        "nullable": false
                    },
                    "password": {
                        "maxLength": 20,
                        "minLength": 6,
                        "type": "string",
                        "nullable": false,
                        "format": "password"
                    },
                    "roles": {
                        "type": "array",
                        "nullable": false,
                        "items": {
                            "type": "string",
                            "nullable": false
                        }
                    },
                    "profileImage": {
                        "$ref": "#/components/schemas/FileVO"
                    }
                }
            },
            "FileVO": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "nullable": false
                    },
                    "file": {
                        "type": "string",
                        "nullable": false
                    },
                    "disabled": {
                        "type": "boolean",
                        "nullable": true
                    }
                }
            }
        }
    },
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
        }
    }
}